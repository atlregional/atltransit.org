}
#myTab>li.active>a:after
{
  z-index: 100;
  width: 0;
  height: 0;
  border-left: 7px solid transparent;
  border-right: 7px solid transparent;
  border-top: 7px solid #006BB6;
  content: '';
  position: absolute;
  left: 50%;
  bottom: -7px;
  margin-left: -6px;
}
.planner-pane {
	/*background-color: #eee;*/
	padding-top:20px;
}
